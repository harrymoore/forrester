{
    "engineId": "alpaca1",
    "_form_key": "master",
    "title": "Account",
    "fields": {
        "clientid": {
            "type": "text",
            "disallowEmptySpaces": true,
            "label": "Client ID",
            "helpers": [
                "Unique ID of client account from SAP"
            ]
        },
        "title": {
            "type": "text",
            "label": "Client name"
        },
        "engagement": {
            "type": "array",
            "label": "Engagement Steps",
            "items": {
                "type": "object",
                "fields": {
                    "step": {
                        "type": "node-picker",
                        "label": "Step",
                        "helpers": [
                            "Choose an Engagement Step"
                        ]
                    },
                    "titleOverride": {
                        "type": "text",
                        "label": "Title Override",
                        "helpers": [
                            "Override default step name"
                        ]
                    },
                    "date": {
                        "type": "date",
                        "label": "Scheduled Date",
                        "helpers": [
                            "Enter the Scheduled or Completed Date for this step"
                        ]
                    },
                    "completed": {
                        "type": "checkbox",
                        "rightLabel": "This step has been completed",
                        "label": ""
                    }
                }
            }
        },
        "resources": {
            "type": "array",
            "label": "Resources",
            "helpers": [
                "Attach resources",
                "A Resource can be a file you upload here or a URL link to an online resource"
            ],
            "items": {
                "type": "object",
                "fields": {
                    "ResourceTitle": {
                        "type": "text",
                        "label": "Title",
                        "order": 1
                    },
                    "ResourceDescription": {
                        "type": "text",
                        "label": "Description",
                        "order": 2
                    },
                    "ResourcePublishingDate": {
                        "type": "text",
                        "label": "Resource Publishing Date",
                        "order": 3
                    },
                    "ResourceType": {
                        "type": "select",
                        "label": "Type of Resource",
                        "required": true,
                        "default": "binary",
                        "optionLabels": [
                            "URL Resource",
                            "File Resource"
                        ],
                        "helpers": [
                            "Select File Resource to upload a resource file",
                            "Select URL Resource to enter the link address of an online resource"
                        ],
                        "order": 4
                    },
                    "ResourceURL": {
                        "type": "url",
                        "label": "URL",
                        "order": 5,
                        "dependencies": {
                            "ResourceType": [
                                "html"
                            ]
                        }
                    },
                    "binary": {
                        "type": "related-content",
                        "maxNumberOfFiles": 1,
                        "uploadPath": "/Client Docs",
                        "order": 6,
                        "dependencies": {
                            "ResourceType": [
                                "binary"
                            ]
                        }
                    }
                }
            }
        }
    }
}
