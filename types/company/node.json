{
    "title": "Company",
    "_qname": "cxindex:company",
    "_parent": "n:node",
    "description": "cxindex:company",
    "type": "object",
    "properties": {
        "clientid": {
            "type": "string",
            "title": "Client id"
        },
        "title": {
            "type": "string",
            "title": "Client name"
        },
        "engagement": {
            "type": "array",
            "title": "Engagement Steps",
            "items": {
                "type": "object",
                "properties": {
                    "step": {
                        "type": "object",
                        "_relator": {
                            "associationType": "a:linked",
                            "nodeType": "cxindex:engagement_step"
                        }
                    },
                    "titleOverride": {
                        "type": "string",
                        "title": "Override default step name"
                    },
                    "date": {
                        "type": "string",
                        "title": "Scheduled Date",
                        "format": "datetime"
                    },
                    "completed": {
                        "type": "boolean",
                        "title": "Completed?"
                    }
                }
            }
        },
        "resources": {
            "type": "array",
            "title": "Resources",
            "items": {
                "title": "Resource",
                "type": "object",
                "properties": {
                    "ResourceTitle": {
                        "type": "string",
                        "title": "Title"
                    },
                    "ResourceType": {
                        "type": "string",
                        "title": "Type",
                        "default": "binary",
                        "enum": [
                            "html",
                            "binary"
                        ]
                    },
                    "ResourceDescription": {
                        "type": "string",
                        "title": "Description"
                    },
                    "ResourceURL": {
                        "type": "string",
                        "title": "URL (optional)",
                        "format": "url"
                    },
                    "binary": {
                        "type": "object",
                        "_relator": {
                            "associationType": "a:linked",
                            "nodeType": "n:node"
                        }
                    },
                    "ResourcePublishingDate": {
                        "type": "string",
                        "title": "Resource Publishing Date"
                    }
                },
                "dependencies": {
                    "ResourceURL": [
                        "ResourceType"
                    ],
                    "binary": [
                        "ResourceType"
                    ]
                }
            }
        }
    },
    "$schema": "http://json-schema.org/draft-04/schema#"
}